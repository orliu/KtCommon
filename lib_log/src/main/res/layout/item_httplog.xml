<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="@android:color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/id_httplog_request_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="requestTime:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_httplog_use_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/id_httplog_request_time"
        android:text="useTime:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_httplog_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_httplog_request_time"
        android:layout_marginTop="8dp"
        android:text="url:"
        android:textStyle="bold"
        android:textSize="14sp" />

</RelativeLayout>